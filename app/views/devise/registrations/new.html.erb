<% content_for(:body_attributes) do %>
    data-no-turbolink="true"
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h2>PRO Sign Up</h2>
        <% else %>
          <h2>Basic sign up</h2>
        <% end %>
      </div>
      
      <div class="well">
        <% if params[:plan] == '2'%>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
